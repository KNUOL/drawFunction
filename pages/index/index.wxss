/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f7fa;
}

.header {
  padding: 30rpx;
  background: linear-gradient(135deg, #2c3e50, #3498db);
  border-radius: 16rpx;
  color: white;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 30rpx;
  color: #cce6ff;
  text-align: center;
  margin-bottom: 15rpx;
  display: block;
}

.info {
  font-size: 28rpx;
  color: #e6f7ff;
  text-align: center;
  display: block;
}

.input-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.input-row {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
}

.coord-input {
  height: 90rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 0 25rpx;
  font-size: 32rpx;
  background-color: #f8fafc;
  margin-right: 15rpx;
}

.x-input {
  flex: 1;
  min-width: 200rpx;
}

.y-input {
  flex: 1;
  min-width: 200rpx;
}

.unit {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-right: 20rpx;
}

.button-group {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.btn {
  flex: 1;
  min-width: 200rpx;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.add-btn {
  background-color: #3498db;
}

.regression-btn {
  background-color: #27ae60;
}

.clear-btn {
  background-color: #e74c3c;
}

.canvas-container {
  height: 550rpx;
  background-color: white;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e2e8f0;
}

.results {
  background: linear-gradient(135deg, #3498db, #2c3e50);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 25rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.label {
  font-size: 30rpx;
  color: #e6f7ff;
}

.value {
  font-size: 30rpx;
  font-weight: bold;
  background-color: rgba(255, 255, 255, 0.15);
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

.points-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.points-container {
  max-height: 300rpx;
  min-height: 150rpx;
  background-color: #f8fafc;
  border-radius: 12rpx;
  padding: 15rpx;
  border: 1rpx solid #e2e8f0;
}

.empty-tip {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 120rpx;
  color: #95a5a6;
  font-size: 30rpx;
}

.point-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx dashed #e2e8f0;
}

.point-item:last-child {
  border-bottom: none;
}

.point-coord {
  font-size: 32rpx;
  color: #2c3e50;
}

.remove-btn {
  background-color: #e74c3c;
  color: white;
  border-radius: 10rpx;
  padding: 10rpx 25rpx;
  font-size: 26rpx;
  min-width: 120rpx;
}
/* 添加排序提示 */
.sort-hint {
  font-size: 26rpx;
  color: #3498db;
  text-align: center;
  background-color: #e3f2fd;
  padding: 10rpx 0;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}

/* 点列表区域优化 */
.point-info {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.point-number {
  font-size: 26rpx;
  font-weight: bold;
  color: #3498db;
  margin-right: 15rpx;
  background-color: #e3f2fd;
  padding: 5rpx 10rpx;
  border-radius: 8rpx;
  min-width: 50rpx;
  text-align: center;
}

.point-coord {
  font-size: 28rpx;
  color: #2c3e50;
  margin-right: 20rpx;
  min-width: 120rpx;
}